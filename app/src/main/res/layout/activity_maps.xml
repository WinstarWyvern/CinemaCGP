<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginTop="30dp"
    tools:context=".activity.MapsActivity">

    <Button
        android:id="@+id/btnFirstLocation"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/cinema_cgp_alpha"
        />

    <Button
        android:id="@+id/btnSecondLocation"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:text="@string/cinema_cgp_beta"
        android:layout_below="@id/btnFirstLocation"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragmentContainer"
        android:layout_width="match_parent"
        android:layout_below="@id/btnSecondLocation"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        />


</RelativeLayout>